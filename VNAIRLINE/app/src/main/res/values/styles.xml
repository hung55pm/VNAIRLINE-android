<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colordarkblue</item>
        <item name="android:textColor">@color/colordarkblue</item>
        <item name="android:listDivider">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:listPreferredItemHeightSmall">30dp</item>
        <item name="android:listPreferredItemPaddingLeft">5dp</item>
        <item name="android:listPreferredItemPaddingRight">5dp</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:itemBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="OverflowMenu">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">7dp</item>
        <item name="android:popupBackground">@color/colordarkblue</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="styletextemloyeeinfo">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/colordarkblue</item>
        <item name="android:layout_width">@dimen/textview_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textview</item>
    </style>

    <style name="styleedittextinvestorinfo">
        <item name="android:textColor">@color/colordarkblue</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/iphone_edittext_into_android</item>
    </style>
    <style name="styleedittextinvestorinfo_nofocus">
        <item name="android:textColor">@color/colordarkblue</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/iphone_edittext_into_android</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>



</resources>
